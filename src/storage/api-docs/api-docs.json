{
    "openapi": "3.0.0",
    "info": {
        "title": "Messenger API",
        "description": "1) Получи токен: POST /api/auth/login или /api/auth/register\n2) В Swagger UI нажми Authorize (замок справа) и введи: Bearer <token>\n3) После этого все защищённые запросы будут отправляться с заголовком Authorization.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8080",
            "description": "Базовый URL API"
        }
    ],
    "paths": {
        "/api/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Регистрация нового пользователя",
                "description": "Возвращает bearer-токен для дальнейших запросов. После регистрации сразу можно использовать его в заголовке `Authorization: Bearer <token>`.",
                "operationId": "c7bb21a0d87049e161b8e4c9b0d909f2",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "nickname",
                                    "email",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "nickname": {
                                        "type": "string",
                                        "example": "john_doe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "secret123"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "secret123"
                                    }
                                },
                                "type": "object"
                            },
                            "example": {
                                "nickname": "john_doe",
                                "email": "user@example.com",
                                "password": "secret123",
                                "password_confirmation": "secret123"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Успешная регистрация",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AuthTokenResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Ошибки валидации"
                    }
                }
            }
        },
        "/api/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Аутентификация и получение токена",
                "description": "Возвращает bearer-токен Sanctum. Используй его в `Authorization: Bearer <token>` для всех защищённых эндпоинтов.",
                "operationId": "dd51a484b7fa0f97c7680fdbde14cf5f",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "nickname",
                                    "password"
                                ],
                                "properties": {
                                    "nickname": {
                                        "type": "string",
                                        "example": "john_doe"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "secret123"
                                    }
                                },
                                "type": "object"
                            },
                            "example": {
                                "nickname": "john_doe",
                                "password": "secret123"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Успешный вход",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AuthTokenResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Неверные учетные данные"
                    },
                    "422": {
                        "description": "Ошибки валидации"
                    }
                }
            }
        },
        "/api/auth/me": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Текущий пользователь",
                "description": "Передай bearer-токен в заголовке `Authorization: Bearer <token>`.",
                "operationId": "b5de204f5e452ef51327c691aa99e77c",
                "responses": {
                    "200": {
                        "description": "Текущий пользователь",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "user": {
                                            "$ref": "#/components/schemas/User"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Не авторизован"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/api/auth/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Выход (отзыв текущего токена)",
                "description": "Отзывает только тот токен, который передан в заголовке `Authorization: Bearer <token>`.",
                "operationId": "df9bdc6c7a6d9f20b983526b2ec0f698",
                "responses": {
                    "200": {
                        "description": "Выход выполнен, токен отозван"
                    },
                    "401": {
                        "description": "Не авторизован"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/api/auth/ping": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Обновить online-статус",
                "description": "Периодический пинг для присутствия. Требуется bearer-токен. Ограничение: до 30 запросов в минуту (throttle:30,1).",
                "operationId": "587289fc592131da532a246555305a80",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Не авторизован"
                    },
                    "429": {
                        "description": "Слишком часто — подожди"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
